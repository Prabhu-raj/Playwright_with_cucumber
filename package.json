{
  "name": "playwright_with_cucumber",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cucumber": "npx cucumber-js && ts-node ./src/index.ts",
    "all_tests": "cucumber-js src/features/**/*.feature --require-module ts-node/register --require ./src/**/hooks/hooks.ts --require src/step-definitions/**/*.ts --require src/utils/cucumber-timeout.ts -f json:./reports/report.json",
    "contactus_tests": "cucumber-js src/features/Contact_Us.feature --require-module ts-node/register --require ./src/**/hooks/hooks.ts --require src/step-definitions/**/*.ts --require src/**/**/**/**/utils/cucumber-timeout.ts",
    "Login_tests": "cucumber-js src/features/Login.feature --require-module ts-node/register --require ./src/**/hooks/hooks.ts --require src/step-definitions/**/*.ts --require src/**/**/**/**/utils/cucumber-timeout.ts -f json:./reports/report.json --format html:./reports/report.html",
    "smoke": "cucumber-js --require-module ts-node/register --require ./src/**/hooks/hooks.ts --require src/step-definitions/**/*.ts --require src/utils/cucumber-timeout.ts src/features/**/*.feature --tags '@smoke'",
    "regression": "cucumber-js --require-module ts-node/register --require ./src/**/hooks/hooks.ts --require src/step-definitions/**/*.ts --require src/utils/cucumber-timeout.ts src/features/**/*.feature --tags '@regression'",
    "ignore": "cucumber-js --require-module ts-node/register --require ./src/**/hooks/hooks.ts --require src/step-definitions/**/*.ts --require src/utils/cucumber-timeout.ts src/features/**/Contact_Us.feature --tags 'not @ignore'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@colors/colors": "^1.6.0",
    "@cucumber/cucumber": "^12.1.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "dotenv": "^17.2.1",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0"
  }
}
